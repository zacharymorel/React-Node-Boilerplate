{
  "name": "react-node-boilerplate",
  "version": "1.0.0",
  "description": "Basic React Node Boilerplate",
  "engines": {
    "node": ">=7.0.0"
  },
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "build-babel": "npm run build-babel-server && npm run build-babel-client",
    "build-babel-server": "babel src/server --out-dir ./dist",
    "build-babel-client": "babel src/client --copy-files --out-dir ./dist/public",
    "start": "node ./dist/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zacharymorel/React-Node-Boilerplate.git"
  },
  "author": "Zach Morel",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zacharymorel/React-Node-Boilerplate/issues"
  },
  "homepage": "https://github.com/zacharymorel/React-Node-Boilerplate#readme",
  "dependencies": {
    "express": "^4.16.3",
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "eslint": "^4.19.1",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-react": "^7.5.1",
    "jest": "^23.1.0",
    "webpack": "^4.12.0",
    "webpack-node-externals": "^1.7.2"
  }
}
